@model IEnumerable<User>
@{
    ViewBag.Title = "Users List";
}

<div class="card-deck">
        @foreach (var user in Model)
        {
            <div class="card m-3" style="min-height:18rem; max-height:30.5%;">
                <div class="card-header">
                    <h3>@user.Name</h3>
                </div>
                <img class="card-img-top" src="~/images/card.png" />
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@user.id"
                       class="btn btn-primary">View</a>
                    <a asp-action="edit" asp-controller="home"
                       asp-route-id="@user.id" class="btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
        }
    </div>


              
            
               
