@model UserEditViewModel
@{
    ViewBag.Title = "Edit User";
}

<form asp-controller="Home" asp-action="edit" 
      method="post" class="mt-3">
    <input hidden asp-for="id"/>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Address" />
            <span asp-validation-for="Address"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Postcode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Postcode" class="form-control" placeholder="Postcode" />
            <span asp-validation-for="Postcode"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" placeholder="Phone" />
            <span asp-validation-for="Phone"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Gender" class="form-control" placeholder="Gender" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Skills" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Skills" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Skills>()"></select>
        </div>
    </div>
    <div>
        <label asp-for="Biography"></label>
        <textarea asp-for="Biography" rows="5" cols="40"></textarea>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>