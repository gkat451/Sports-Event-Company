@model HomeDetailsViewModel
@{
    ViewBag.Title = "User Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.User.Name</h1>
                </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/card.png" height="250" width="50"  />

                <h4>User ID : @Model.User.id</h4>
                <h4>Email : @Model.User.Email</h4>
                <h4>Address : @Model.User.Address</h4>
                <h4>Postcode : @Model.User.Postcode</h4>
                <h4>Mobile : @Model.User.Phone</h4>
                <h4>Gender : @Model.User.Gender</h4>
                <h4>Biography : @Model.User.Biography</h4>
                <h4>Skills : @Model.User.Skills</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="list" class="btn btn-primary">Back</a>
                <a asp-action="edit" asp-controller="home"
                       asp-route-id="@Model.User.id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
       <script src="~/js/CustomScript.js"></script>
       }

